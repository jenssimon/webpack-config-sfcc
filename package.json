{
  "name": "@jenssimon/webpack-config-sfcc",
  "version": "0.0.0-development",
  "description": "A shareable Webpack configuration for SFCC projects",
  "author": "Jens Simon <https://github.com/jenssimon/>",
  "license": "MIT",
  "keywords": [
    "salesforce",
    "commercecloud",
    "sfcc",
    "webpack"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "ci-test": "run-s \"ci-test:*\"",
    "ci-test:lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "ci-test:tsc": "tsc --noEmit",
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "build": "tsc",
    "prepare": "npm-run-all build",
    "commit": "cz",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@swc/core": "^1.3.28",
    "@swc/helpers": "^0.4.14",
    "autoprefixer": "^10.4.13",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "circular-dependency-plugin": "^5.2.2",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "eslint-webpack-plugin": "^4.0.0",
    "mini-css-extract-plugin": "^2.7.2",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.0.2",
    "postcss-merge-longhand": "^6.0.0",
    "postcss-preset-env": "^8.0.0",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "swc-loader": "^0.2.3",
    "webpack-remove-empty-scripts": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.0",
    "@commitlint/config-conventional": "17.4.4",
    "@jenssimon/eslint-config-base": "6.6.13",
    "@jenssimon/eslint-config-typescript": "3.6.32",
    "@types/case-sensitive-paths-webpack-plugin": "2.1.6",
    "@types/circular-dependency-plugin": "5.0.5",
    "@types/css-minimizer-webpack-plugin": "3.2.1",
    "@types/mini-css-extract-plugin": "2.5.1",
    "@types/node": "18.15.10",
    "@types/postcss-preset-env": "7.7.0",
    "@types/sass": "1.43.1",
    "@types/webpack": "5.28.0",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.36.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.0",
    "npm-run-all": "4.1.5",
    "pinst": "3.0.0",
    "typescript": "5.0.2",
    "webpack": "5.76.3"
  },
  "eslintConfig": {
    "extends": [
      "@jenssimon/base",
      "@jenssimon/typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": "eslint"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
